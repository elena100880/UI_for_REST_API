{% extends 'base.html.twig' %}

{% block title %} Edit ProductInStore {% endblock %}
{% block stylesheets1 %} <link rel="stylesheet" href="/css/products_in_store/products_edit.css"> {% endblock %}
 
{% block logo %} Edit Product in Store {% endblock %}

{% block content %}

        {% for message in app.flashes('message') %}
            <div class='alert alert succes'>
                <span style='color:aqua; font-weight: bold; font-size: 20px'>{{message}}</span>
            </div>
        {% endfor %}<br>

        {{form_start(form)}}
            {{form_row(form.name)}}
            {{form_row(form.amount)}}
            <div class = 'form'> {{form_row(form.save)}} </div>
            <div class = 'form'> {{form_row(form.delete)}} </div>
            <div style = 'clear:both'></div>
        {{form_end(form)}}
                   
        <br><span style="color: fuchsia; font-weight: bold" >Dev info:<br>
        {{developerMessage}}</span><br><br>      
     
        <div class = 'links'>
            <a href="{{ path('products_all') }}"> Back to list of Products in Store >>>> </a>
        </div>
      
{% endblock %}

